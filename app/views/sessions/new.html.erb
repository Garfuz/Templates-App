<header>
  <h1>personify</h1>
</header>

<div class="wrapper">
  <h3>Sign In</h3>

  <section class="form">
    <% if flash[:error] %>
      <p><%= flash[:error] %></p>
    <% end %>

    <%= form_for(:session, :url => session_path) do |f| %>
      <%= f.text_field :email %>
      <%= f.password_field :password %>
      <%= f.button :submit %>
    <% end %>
  </section>


  <footer>
  <%= link_to "Don't have an account? Sign up here!", new_user_path %>
  </footer>
</div>
