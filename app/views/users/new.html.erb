<head>
<link href="https://fonts.googleapis.com/css?family=Acme|Bungee+Shade|Righteous" rel="stylesheet">
</head>

<header>
  <h1>personify</h1>
</header>

<div class="wrapper">
  <h3>Signup</h3>
    <p>Please enter the following information below.</p>

  <section class="form">
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>

    <%= form_for(@user) do |f| %>
      <fieldset>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </fieldset>

      <fieldset>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </fieldset>

      <fieldset>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </fieldset>

      <fieldset>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </fieldset>

      <fieldset>
        <%= f.button :submit %>
      </fieldset>
    <% end %>
  </section>
</div>
